        int FactCardID PK
        int CategoryID FK
        nvarchar Question
        nvarchar Answer
        datetime DateAdded
        datetime LastReviewDate
        date NextReviewDate
        int CurrentInterval
        int ViewCount
        float Mastery
        datetime LastEditedDate
    }

